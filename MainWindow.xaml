<Window x:Class="demo_Application_Chatbot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo_Application_Chatbot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid 
   Height="450"
   Width="800"
  
    >
        <!--side bar menu grid -->
        <Grid
        Height="450"
        Width=" 100"
        Margin="0,0,700,0"
        
        Background="Black"
        
        >
            <!--button for chatting grid page-->
            <Button
             Height="30"
             Width="90"
            Content="Chat"
            Click="chat"
            Margin="0,0,0,350"
            
            Background="Black"
            Foreground="White"
            BorderBrush="pink"
          
         
            ></Button>
            <!--end of button for chatting grid page-->

            <!--button for reminder grid page-->
            <Button
             Height="30"
             Width="90"
             Content="Reminder"
             Click="remind"
             Margin="0,0,0,250"
  
             Background="Black"
             Foreground="White"
             BorderBrush="pink"
  
  
         ></Button>
            <!-- END button for reminder grid page-->

            <!--button for quiz grid page-->
            <Button
             Height="30"
             Width="90"
             Content="Quiz"
             Click="Quiz"
             Margin="0,0,0,150"
   
              Background="Black"
              Foreground="White"
              BorderBrush="pink"
   
   
          ></Button>
            <!--end button for quiz grid page-->
            <!--button for Activity log grid page-->

            <Button
            Height="30"
            Width="90"
            Content="Activity log"
            Click="Activity"
            Margin="0,0,0,50"
   
            Background="Black"
            Foreground="White"
            BorderBrush="pink"
   
   
   
          ></Button>
            <!-- end button for Activity log grid page-->

            <!--button for exit  grid page-->

            <Button
              Height="30"
              Width="90"
              Content="Exit App"
              Click="Exit"
              Margin="0,50,0,0"
   
              Background="Black"
              Foreground="White"
              BorderBrush="pink"
   
       ></Button>
            <!-- end button for exit grid page-->


        </Grid>
        <!--end of side bar grid-->

        <!--Main content display-->

        <Grid 
        Height="450"
        Width="700"
        Margin="100,0,0,0"
        
        >
            <!--Grid chat -->
            <Grid 
           Height="450" 
            Width="700"
            x:Name="Chat_page"
            Background="LightPink"
          
          
            >
                <TextBlock
                Text="We are chatting now"
                Height="30"
                Width="300"
               
                >


                </TextBlock>

            </Grid>
            <!--end of the main content grid-->

            <!--Grid chat -->
            <Grid 
         Height="450" 
          Width="700"
          x:Name="reminder_page"
                
         Background="OrangeRed"
           Visibility="Hidden"
   
         >
                <!---list view to append chat -->
                <ListView
            Height="300"
            Width="400"
            x:Name="chat_append"
           
            Margin="0,0,0,145"
                  
           
           />
                


                <!---text box to collect user task-->
                <TextBox  
            Height="30"
            Width="400"
            x:Name="user_task"
            Margin="0,210,0,0"
             Text="to add task type 'add task'"
            
            />

                <!--Button for sub task -->
                <Button  
         Height="30"
         Width="400"
         Content="Set reminder"
         Margin="0,290,0,0"
         Click="setting_reminder"
                  
         
            />





            </Grid>
            <!--end of the main content grid-->
            <!--Grid quiz  -->
            <Grid 
               
         Height="450" 
         Width="700"
          x:Name="quiz_page"
          Background="Lavender"
            Visibility="Hidden"
   
   
 >
                <StackPanel
                    VerticalAlignment="Center"
        HorizontalAlignment="Center"
        Width="400"
        >
                    <!-- add all required components-->

                    <!--title of the game -->
                    <TextBlock 
            Text="Cyber security quiz [game]"
            HorizontalAlignment="Center"
            />

                    <TextBlock
            Text="Question to be asked ?"
            x:Name="DisplayedQuestion"
            HorizontalAlignment="Center"
            />


                    <!-- add the four buttons for selecting answer-->
                    <Button 
         x:Name="FirstChoiceButton"
         Click="HandleAnswerSelection"
            Padding="20"
         />

                    <Button 
            x:Name="SecondChoiceButton"
            Click="HandleAnswerSelection"
            Padding="20"
            />

                    <Button 
            x:Name="ThirdChoiceButton"
            Click="HandleAnswerSelection"
            Padding="20"
            />

                    <Button
            x:Name="FourthChoiceButton"
            Click="HandleAnswerSelection"
            Padding="20"
            />

                    <!-- put the score and the next button -->
                    <Button
            x:Name="NextQuestionButton"
            Content="Next"
            Click="HandleNextQuestion"
            Padding="20"
            
            Background="BurlyWood"
            />

                    <!-- show the score-->
                    <TextBlock 
x:Name="DisplayScore"
HorizontalAlignment="Right"
Text="play game first"
/>
                </StackPanel>
            </Grid>
            <!--end of the main content grid-->
            <!--Grid activity -->
            <Grid 
          Height="450" 
          Width="700"
          x:Name="activity_page"
          Background="Khaki"
            Visibility="Hidden"
   
   
 >
                <TextBlock
            Text="We are activity now"
             Height="30"
              Width="300"
    
     >


                </TextBlock>

            </Grid>
            <!--end of the main content grid-->

        </Grid>
        <!--End od the main content grid-->

    </Grid>
</Window>
